<% for x in @show_crypto %>
  <% if @crypto.symbol.upcase == x["symbol"] %>
    <% @crypto_name = x["name"] %> 
    <% @crypto_price_usd = x["price_usd"]  %>
    <% @crypto_rank = x["rank"] %>
    <% @crypto_percent_change_1h = x["percent_change_1h"] %>
    <% @crypto_percent_change_24h = x["percent_change_24h"] %>
    <% @crypto_percent_change_7d = x["percent_change_7d"] %>
    <% @crypto_amount_owned = @crypto.amount_owned %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><strong><%= @crypto_name %></strong></h3>
    <h6>Amount Owned:  <%= @crypto_amount_owned %></h6>
  </div>
  <div class="panel-body">
    <h1><%= @crypto.symbol.upcase %></h1>
    <hr>
    <p>
      <strong>Crypto Rank: </strong> <%= @crypto_rank %>
    </p>
    <p>
      <strong>Current Price: </strong> $<%= @crypto_price_usd %>
    </p>
    <p>
      <strong>% Changed In Last Hour: </strong> <%= @crypto_percent_change_1h %>%
    </p>
    <p>
      <strong>% Changed In Last 24 Hours: </strong> <%=  @crypto_percent_change_24h %>%
    </p>
    <p>
      <strong>% Changed In Last 7 Days: </strong> <%= @crypto_percent_change_7d %>%
    </p>
    
  </div>

  <div class="panel-footer">
    <%= link_to 'Edit', edit_crypto_path(@crypto), class: "btn btn-default" %> |
    <%= link_to 'Back', cryptos_path, class: "btn btn-default" %> | 
    <%= link_to 'Delete Currency', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure you want to delete save currenxy info?' }, class: "btn btn-danger" %>
  </div>
</div>
</div>
</div>
